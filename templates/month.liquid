{% include 'layouts/header.liquid' %}

  <div class="container">
    <div class="row">

      <div class="col-md-12 col-12">

        <div class="years">

            <h2 class="month-title">{{ month.full_name }}</a></h3>

            {% for day in month.days %}
              <div class="month-gallery">

                <h3 class="day-title">{{ day.full_name }}</h3>

                <ul class="gallery">
                  {% for photo in day.photos %}

                    <li class="item">
                      <span>
                        {% if photo.thumbnail %}
                          <a href="{{ root }}{{ photo.relative_url }}" class="thumb">
                            <img src="{{ root }}{{ photo.thumbnail }}" width="150" height="150">
                          </a>
                        {% endif %}
                        <a href="{{ root }}{{ photo.relative_url }}" class="title">{{ photo.title }}</a>
                      </span>
                    </li>

                  {% endfor %}
                </ul>

              </div>
            {% endfor %}

        </div>

      </div>

    </div>
  </div>

{% include 'layouts/footer.liquid' %}
